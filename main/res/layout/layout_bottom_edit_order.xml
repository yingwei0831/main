<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@android:color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/tv_edit_order_price"
        android:gravity="center"
        android:text="订单金额： ￥"
        android:textColor="@android:color/holo_red_light" />

    <TextView
        android:id="@+id/tv_edit_order_price"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/btn_edit_order_pay"
        android:gravity="center"
        android:paddingRight="10dp"
        android:text="2879"
        android:textSize="16sp"
        android:textColor="@android:color/holo_red_light" />

    <Button
        android:id="@+id/btn_edit_order_pay"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_btn_edit_order_selector"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="立即支付"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_top_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTab3ItemBgTop"
        android:paddingBottom="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待付款"
            android:textColor="@color/colorBgTitleMain" />


        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@mipmap/icon_clock_dark"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:text="2016-07-28"
            android:textColor="@android:color/darker_gray" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/iv_tab3_listview_item_destination"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/travel_icon" />

        <TextView
            android:id="@+id/tv_order_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_tab3_listview_item_destination"
            android:layout_alignTop="@id/iv_tab3_listview_item_destination"
            android:layout_toRightOf="@id/iv_tab3_listview_item_destination"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="2"
            android:paddingLeft="10dp"
            android:textColor="@android:color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/iv_tab3_listview_item_destination"
            android:layout_marginTop="10dp"
            android:background="@color/colorLineGray" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="6dp"
        android:gravity="bottom">

        <TextView
            android:id="@+id/tv_tab3_item_money"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:gravity="bottom"
            android:paddingBottom="1dp"
            android:text="￥"
            android:textColor="@color/colorTab1RecommendForYouMoney" />

        <TextView
            android:id="@+id/tv_tab3_item_price"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_toRightOf="@+id/tv_tab3_item_money"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="88888"
            android:textColor="@color/colorTab1RecommendForYouMoney"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_order_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btn_tab3_item_sign_contact"
            android:background="@drawable/bg_tab3_btn_border_cancel_order"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="@string/tab3_order_item_cancel_order"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_tab3_item_sign_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_tab3_btn_border_sign_contact"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="@string/tab3_order_item_sign_contact"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorTab1RecommendForYouMoney"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_order_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_tab3_btn_border_comment"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="@string/tab3_order_item_comment_order"
            android:textColor="@color/colorTextBorder"
            android:textSize="14sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_order_refund"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_tab3_btn_border_refund"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="@string/tab3_order_item_refund_order"
            android:textColor="@color/colorBgTitleMain"
            android:textSize="14sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_order_go_refund"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_tab3_btn_border_refund"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="@string/tab3_order_item_go_refund_order"
            android:textColor="@color/colorBgTitleMain"
            android:textSize="14sp"
            android:visibility="visible" />
    </LinearLayout>


</LinearLayout>

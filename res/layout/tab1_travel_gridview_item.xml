<?xml version="1.0" encoding="utf-8"?>
<com.jhhy.cuiweitourism.view.MyLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/iv_tab1_travel_gridview_destination"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@mipmap/travel_icon"
        android:scaleType="fitXY"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/tv_tab1_travel_gridview_title"
        android:gravity="center_vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="@string/tab1_recommend_for_you_title"
        android:ellipsize="end"
        android:background="@android:color/white"
        android:textSize="16sp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_marginBottom="6dp"
        >

        <TextView
            android:id="@+id/tv_tab1_price"
            android:layout_toRightOf="@+id/tv_tab_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTab1RecommendForYouMoney"
            android:text="88888"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_tab_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ï¿¥"
            android:textColor="@color/colorTab1RecommendForYouMoney"
            android:layout_alignBaseline="@id/tv_tab1_price"
            />

        <TextView
            android:id="@+id/tv_tab1_travel_gridview_argument"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@mipmap/tab1_recommend_argument"
            android:text="@string/tab1_recommend_argument"
            android:textColor="@color/colorTab1RecommendForYouArgument"
            android:background="@drawable/bg_tab1_tv_border_argument"
            android:drawablePadding="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

</com.jhhy.cuiweitourism.view.MyLinearLayout>

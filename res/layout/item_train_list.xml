<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/layout_arrival"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ticket_item_train_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="G15"
            android:textColor="@color/colorGrayDark" />

        <TextView
            android:id="@+id/tv_ticket_item_train_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="18：00"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_from_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_tv_circle_yellow"
                android:gravity="center"
                android:padding="2dp"
                android:text="始"
                android:textColor="@color/colorInnerTravelYellowDark"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_ticket_item_train_start_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/tv_from_station"
                android:text="北京南"
                android:textColor="@color/colorGrayDark" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_arrival"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ticket_item_train_consuming_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04小时55分"
            android:textColor="@color/colorGrayDark" />

        <TextView
            android:id="@+id/tv_ticket_item_train_arrival_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="15：55"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_arrival_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_tv_circle_yellow"
                android:gravity="center"
                android:padding="2dp"
                android:text="终"
                android:textColor="@color/colorInnerTravelYellowDark"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_ticket_item_train_arrival_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/tv_arrival_station"
                android:text="上海虹桥"
                android:textColor="@color/colorGrayDark" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/layout_arrival"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ticket_item_train_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥1210"
            android:textColor="@color/colorTab1RecommendForYouMoney"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_ticket_item_train_seat_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="商务座"
            android:textColor="@color/colorGrayDark" />

        <TextView
            android:id="@+id/tv_ticket_item_train_ticket_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14张"
            android:textColor="@color/colorGrayDark" />
    </LinearLayout>

</RelativeLayout>
